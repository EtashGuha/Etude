// this json file is used by the test suite to connect to the Wolfram public cloud 
// and to evaluate expressions to a local kernel. 
// It's path is specified with the environment variable WOLFRAMCLIENT_PY_JSON_CONFIG
{
    "kernel" : "/path/to/WolframKernel",
    "cloud_credentials" : {
        "User": {
            "id": "$WolframID",
            "password": "my password"
        },
        "SAK": {
            "consumer_key": "consumer key",
            "consumer_secret": "consumer secret"
        }
    },
    "ApiOwner": "$UserName",
    "server": {
        "host": "https://www.my.wolframcloud.com",
        "request_token_endpoint": "https://account.my.wolfram.cloud.com/auth/request-token",
        "access_token_endpoint": "https://account.my.wolfram.cloud.com/auth/access-token",
        "xauth_consumer_key": "my xauth consumer key (optional)",
        "xauth_consumer_secret": "my xauth consumer secret (optional)",
        "certificate" : "/path/to/certificate/ (optional)"
    }
}